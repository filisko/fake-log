{
    "name": "filisko/fake-psr3-logger",
    "type": "library",
    "description": "Fake PSR-3 cache implementation for integration testing",
    "license": "MIT",
    "keywords": [
        "psr-3",
        "logger",
        "log",
        "server",
        "testing",
        "fake",
        "mock"
    ],
    "homepage": "https://github.com/filisko/fake-psr3-logger",
    "support": {
        "issues": "https://github.com/filisko/fake-psr3-logger/issues"
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "psr/log": "^1 || ^2 || ^3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8 || ^9",
        "friendsofphp/php-cs-fixer": "^3",
        "squizlabs/php_codesniffer": "^3",
        "phpstan/phpstan": "^1 || ^2"
    },
    "provide": {
        "psr/log-implementation": "^1 || ^2 || ^3"
    },
    "autoload": {
        "psr-4": {
            "Filisko\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Filisko\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse",
        "test": "phpunit",
        "coverage": "XDEBUG_MODE=coverage phpunit",
        "coverage-html": "XDEBUG_MODE=coverage phpunit --coverage-html=build/html",
        "coveralls": "php vendor/bin/php-coveralls --exclude-no-stmt --coverage_clover=build/logs/clover.xml -v"
    }
}
